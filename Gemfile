source 'https://rubygems.org'

# Application
gem 'rails', '3.2.8'
gem 'inherited_resources'

# Web
gem 'puma'

# Frontend
gem 'haml-rails'
gem 'jquery-rails'
gem 'twitter-bootstrap-rails', github: 'seyhunak/twitter-bootstrap-rails', branch: :static

# Database
gem 'bson_ext'
gem 'mongoid'

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'normalize-rails'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'factory_girl_rails'
  gem 'rb-fsevent', '~> 0.9.1'
  gem 'mongoid-rspec'
end
